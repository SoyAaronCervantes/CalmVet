<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="animal"
      type="com.soyaaroncervantes.calmvet.models.pets.Animal" />
  </data>

  <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/petIconImage"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginEnd="16dp"
          android:contentDescription="Icon Image" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
            android:id="@+id/petName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ animal.name }"
            android:textAppearance="?attr/textAppearanceHeadline6" />

          <TextView
            android:id="@+id/petBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ animal.animal }"
            android:textAppearance="?attr/textAppearanceSubtitle2" />

        </LinearLayout>

      </LinearLayout>

      <ImageView
        android:id="@+id/petHeaderImage"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginVertical="16dp" />

      <TextView
        android:id="@+id/petDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="@{ animal.description }"
        android:textAppearance="?attr/textAppearanceBody1" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/detailPetButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/primary_700"
          android:text="Detalles" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:orientation="vertical">

          <Button
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:id="@+id/addToFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_favorite_border"
            app:iconTint="#A8A8A8" />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </com.google.android.material.card.MaterialCardView>

</layout>