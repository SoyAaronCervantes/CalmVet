<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="animal"
      type="com.soyaaroncervantes.calmvet.models.pets.Animal" />
  </data>

  <com.google.android.material.card.MaterialCardView
    android:layout_marginVertical="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/petImage"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:contentDescription="Animal image" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title, secondary and supporting text -->
        <TextView
          android:id="@+id/petName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@{ animal.name }"
          android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
          android:id="@+id/petAnimal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@{ animal.age }"
          android:textAppearance="?attr/textAppearanceBody2"
          android:textColor="?android:attr/textColorSecondary" />

        <TextView
          android:id="@+id/petDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="@{ animal.description }"
          android:textAppearance="?attr/textAppearanceBody2"
          android:textColor="?android:attr/textColorSecondary" />

      </LinearLayout>

      <!-- Buttons -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/detailPetButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/primary_700"
          android:text="Detalles" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:orientation="vertical">

          <Button
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:id="@+id/addToFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_favorite_border"
            app:iconTint="#A8A8A8" />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </com.google.android.material.card.MaterialCardView>

</layout>