<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_navigation"
  app:startDestination="@id/splashFragment">
  <fragment
    android:id="@+id/splashFragment"
    android:name="com.soyaaroncervantes.calmvet.view.fragments.splash.SplashFragment"
    android:label="fragment_splash"
    tools:layout="@layout/fragment_splash" >
    <action
      android:id="@+id/action_splashFragment_to_viewPagerFragment"
      app:destination="@id/viewPagerFragment"
      app:enterAnim="@android:anim/fade_in"
      app:popUpTo="@id/viewPagerFragment"
      app:popUpToInclusive="true" />
  </fragment>
  <fragment
    android:id="@+id/viewPagerFragment"
    android:name="com.soyaaroncervantes.calmvet.view.fragments.viewpager.ViewPagerFragment"
    android:label="ViewPagerFragment" >
    <action
      android:id="@+id/action_viewPagerFragment_to_addPetFragment"
      app:destination="@id/addPetFragment"
      app:enterAnim="@anim/nav_default_pop_enter_anim"
      app:exitAnim="@anim/nav_default_pop_exit_anim" />
  </fragment>
  <fragment
    android:id="@+id/addPetFragment"
    android:name="com.soyaaroncervantes.calmvet.view.fragments.addPet.AddPetFragment"
    android:label="AddPetFragment" >
    <action
      android:id="@+id/action_addPetFragment_to_petPhotosFragment"
      app:destination="@id/petPhotosFragment" />
  </fragment>
  <fragment
    android:id="@+id/petPhotosFragment"
    android:name="com.soyaaroncervantes.calmvet.view.fragments.addPet.PetPhotosFragment"
    android:label="fragment_pet_photos"
    tools:layout="@layout/fragment_pet_photos" >
    <action
      android:id="@+id/action_petPhotosFragment_to_viewPagerFragment"
      app:destination="@id/viewPagerFragment" />
  </fragment>
</navigation>