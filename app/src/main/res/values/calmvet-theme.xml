<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="appTheme" parent="Theme.CalmVet">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_500</item>
    <item name="colorPrimaryVariant">@color/primary_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondary_200</item>
    <item name="colorSecondaryVariant">@color/secondary_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <item name="android:windowBackground">@drawable/windowBackground</item>
    <item name="android:windowFullscreen">@bool/windowFullscreen</item>
    <item name="android:windowNoTitle">@bool/windowNoTitle</item>
  </style>
</resources>